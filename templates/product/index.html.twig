{% extends 'base.html.twig' %}

{% block title %}Nos produits - La Boutique Fran√ßaise{% endblock %}

{% block content %}
    <h1>Nos produits</h1>

    <div class="row product-container">
        {% for product in products %}
            <div class="col-md-4">
                <div class="product-item text-center">
                    <img src="/upload/files/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
                    <h2 class="product-name">{{ product.name }}</h2>
                    <span class="product-subtitle">{{ product.subtitle }}</span>
                    <span class="product-price">{{ (product.price / 100)|number_format(2, ',') }} &euro;</span>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
