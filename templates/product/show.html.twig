{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - La Boutique Fran√ßaise{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-5">
            <img src="/upload/files/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h1>{{ product.name }}</h1>
            <p class="mb-3">{{ product.subtitle }}</p>
            <div class="product-page-price">{{ (product.price / 100)|number_format(2, ',') }} &euro;</div>
            <hr/>
            <p>{{ product.description }}</p>
            <a href="#" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>
{% endblock %}
